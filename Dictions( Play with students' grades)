# In[122]:


grade_dicts = {} # Empty
for l in grades[1:]:
    grade_dicts[l[0]]=dict(zip(assignments,[int(i) for i in l[1:]]))
grade_dicts['Thorny']['Exam 1']


# In[127]:


from statistics import mean
avg_grades_by_student={}
for l in grades[1:]:
    avg_grades_by_student[l[0]]=mean([int(i) for i in l[1:]])
avg_grades_by_student['Thorny']


# In[157]:


grades_by_assignment={}
for k,a in enumerate (assignments):
    grades_by_assignment[a]=[int(l[k+1]) for l in grades[1:]]
    
grades_by_assignment    


# In[162]:


avg_grades_by_assignment={}
from statistics import mean

avg_grades_by_assignment={a:mean(g) for a,g in grades_by_assignment.items()}
avg_grades_by_assignment


# In[182]:


rank = sorted(avg_grades_by_student, key=avg_grades_by_student.get, reverse=True)
avg_grades_by_student,rank


